{
    "app-id" : "io.github.rschroll.nbpreview",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "command" : "nbpreview",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "pip-install",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "pip install --prefix=/app nbconvert",
                "cp -r /usr/lib/python3.11/site-packages/pygments /app/lib/python3.11/site-packages/pygments"
            ]
        },
        {
            "name" : "nbpreview",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/rschroll/Projects/nbpreview"
                }
            ]
        }
    ]
}
